	^Promise
		when: promise
		fulfilled: [:value | ^failWithMessage: 'Expected broken with ', expectedErrorClass printString, ' but resolved with ', value printString]
		broken: [:error | (* assert: resolution class equals: expectedErrorClass. *)]
)
) : (
