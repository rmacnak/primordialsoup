public class AwaitTests = TestBase () (
awaitExceptionInContinuation = (
	(await: 0) / 0.
)
awaitExceptionLocalReturn = (
	| result |
	[await: 0 <-: / 0.
	 r:: 'success']
		on: Exception
		do: [:e | result:: 'exception'].
	^result
)
awaitExceptionNonLocalReturn = (
	[await: 0 <-: / 0.
	 ^'success']
		on: Exception
		do: [:e | ^'exception'].
