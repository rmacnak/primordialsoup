public testPerformEventual = (
	| receiver message |
	receiver:: 'hello'.

	(* Unary *)
	message:: Message selector: #size arguments: {}.
	await:: assert: (message sendToEventual: receiver) resolvesTo: 5.

	(* Binary *)
	message:: Message selector: #, arguments: {'world'}.
	await:: assert: (message sendToEventual: receiver) resolvesTo: 'helloworld'.

	(* Keyword *)
	message:: Message selector: #startsWith: arguments: {'he'}.
	await:: assert: (message sendToEventual: receiver) resolvesTo: true.

	(* MNU - no method *)
	message:: Message selector: #doesNotExist arguments: {}.
	await:: assert: (message sendToEventual: receiver) smashedWith: MessageNotUnderstood.

	(* MNU - protected method *)
	message:: Message selector: #Array arguments: {}.
	await:: assert: (message sendToEventual: receiver) smashedWith: MessageNotUnderstood.
